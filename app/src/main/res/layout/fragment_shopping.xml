<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".Fragments.ShoppingFragment">

    <View
        android:background="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.design.chip.ChipGroup
        android:id="@+id/chip_group"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <android.support.design.chip.Chip
            android:id="@+id/chip_basket"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Basket"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.chip.Chip
            android:id="@+id/chip_football"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Football"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.chip.Chip
            android:id="@+id/chip_badminton"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Badminton"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.chip.Chip
            android:id="@+id/chip_tennis"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Tennis"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.chip.Chip
            android:id="@+id/chip_ping_pong"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Ping pong"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.chip.Chip
            android:id="@+id/chip_volleyball"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            android:text="Volleyball"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </android.support.design.chip.ChipGroup>

    <View
        android:layout_marginTop="10dp"
        android:background="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>